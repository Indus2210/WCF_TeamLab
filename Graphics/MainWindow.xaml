<Window x:Class="Graphics.MainWindow" Background="WhiteSmoke" ResizeMode="CanMinimize"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphics"
        mc:Ignorable="d"
        Title="Теплопроводность" Height="500" Width="700">

    <Grid>
        <Canvas x:Name="Canva" Width="300" Height="300" Margin="100,100,362.4,100" Background="LimeGreen">
            <TextBox x:Name="left" Canvas.Left="-60" Width="50" Canvas.Top="140" Text="500" FontSize="20"/>
            <TextBox x:Name="top" Canvas.Left="120" Width="50" Canvas.Top="-40" Text="500" FontSize="20"/>
            <TextBox x:Name="right" Canvas.Right="-60" Width="50" Canvas.Top="140" Text="500" FontSize="20"/>
            <TextBox x:Name="bottom" Canvas.Right="130" Width="50" Canvas.Bottom="-40" Text="500" FontSize="20"/>
            <Button x:Name="Start" Content="Start" FontSize="30" Click="Start_Click" Canvas.Right="-150" Canvas.Left="413" Width="137" Height="64"/>
            <Button x:Name="Stop" Content="Stop" FontSize="30" Click="Stop_Click" Canvas.Right="-150" Canvas.Left="413" Width="137" Height="64" Canvas.Top="174"/>
        </Canvas>


    </Grid>
</Window>
